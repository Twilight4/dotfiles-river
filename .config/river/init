####### Fun Commands: musikcube, btop, cava, tty-clock, cmatrix, neofetch, pipes, mpv ######
riverctl map normal Super+Control B spawn 'footclient -a btop -e btop'                                     # Btop
riverctl map normal Super+Control Y spawn 'footclient -a cava -e cava'                                     # Cava
riverctl map normal Super+Control U spawn 'footclient -a clock -e tty-clock -c -C 4 -r -s -f "%A, %B, %d"' # Clock
riverctl map normal Super+Control I spawn 'footclient -a musikcube -e musikcube'                           # Music
riverctl map normal Super+Control O spawn 'footclient -a cmatrix -e cmatrix -a'                            # Matrix
riverctl map normal Super+Control P spawn 'footclient -a pipes -e ~/.config/zsh/bash-scripts/pipes.sh'     # Pipes

###### Updates ######
#riverctl map normal Super+Control C spawn 'notify-send -u low -t 4000 "Updating cheatsheets..." && footclient --title update -a update -e ~/.config/hypr/scripts/cheatsheets push && notify-send "Cheatsheets pushed"'
riverctl map normal Super+Control+Shift U spawn 'notify-send -u low -t 4000 -i "$HOME/.config/mako/icons/update.png" "Updating system..." && footclient --title paru -a paru -e paru --noconfirm -Syuu && notify-send "System Update Complete" ; echo Done - Press enter to exit; read _'

