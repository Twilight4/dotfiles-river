#riverctl map passthrough Super F11 enter-mode normal


###########################################################################################
# TAG MANAGEMENT                                                                          #
###########################################################################################
###### Focus Tags of App Keys ######
riverctl map normal Super Return spawn 'kitty -1'                          # Terminal standalone (Kitty)
riverctl map normal Super I spawn '~/.config/river/scripts/tag-kitty-1'    # Terminal (Kitty)
riverctl map normal Super I spawn '~/.config/river/scripts/tag-kitty-2'    # Terminal (Kitty)
riverctl map normal Super W spawn '~/.config/river/scripts/tag-waterfox'   # Web browser (Waterfox)
riverctl map normal Super E spawn '~/.config/river/scripts/tag-logseq'     # Editor (Logseq)
#riverctl map normal Super E spawn '~/.config/river/scripts/tag-emacs'     # Editor (Emacs)
riverctl map normal Super N spawn '~/.config/river/scripts/tag-newsboat'   # News (Newsboat)

# Define the letter tags for focus tag [0-7]
# If you don't want to use my "Focus Tags of App Keys" implementation then 
# just comment it out and add the letters back respectively: "I" "O" "W" "E" "N"
tags_focus=("" "" "" "" "M" "" "Semicolon" "Apostrophe")

# Define the letter tags
tags=("I" "O" "W" "E" "M" "N" "Semicolon" "Apostrophe")

# Super+[I-O-M-Semicolon-Apostrophe] to focus tag [0-7]
for i in $(seq 1 8); do
    tag="${tags_focus[i - 1]}"
    tags_bit=$((1 << (i - 1)))
    riverctl map normal Super "$tag" set-focused-tags "$tags_bit"
done

# Super+Shift+[I-O-W-E-M-N-Semicolon-Apostrophe] to tag focused view with tag [0-7]
for i in $(seq 1 8); do
    tag="${tags[i - 1]}"
    tags_bit=$((1 << (i - 1)))
    riverctl map normal Super+Shift "$tag" set-view-tags "$tags_bit"
done

# Super+Ctrl+[I-O-W-E-M-N-Semicolon-Apostrophe] to toggle focus of tag [0-7]
for i in $(seq 1 8); do
    tag="${tags[i - 1]}"
    tags_bit=$((1 << (i - 1)))
    riverctl map normal Super+Control "$tag" toggle-focused-tags "$tags_bit"
done


